
{
	"version": 2,
	"builds": [
		{ "src": "api/**/*.py", "use": "@vercel/python" },
		{ "src": "chatbot.py", "use": "@vercel/python" }
	],
	"routes": [
		{
			"src": "^/$",
			"dest": "/templates/index.html"
		},
		{
			"src": "^/api/(.*)$",
			"dest": "/chatbot.py"
		}
	],
	"functions": {
		"chatbot.py": {
			"runtime": "python3.11",
			"maxDuration": 10
		}
	}
}
